<Window x:Class="FolderBrowser.Windows.NewFileSystemEntryPopup.NewFileSystemEntryPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        Title="NewFileSystemEntryPopup" Height="250" Width="400">
    <Grid>
        <Label Content="New file/folder" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="FileSystemEntryNameTextbox" HorizontalAlignment="Left" Margin="39,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="29"/>
        <TextBlock HorizontalAlignment="Left" Margin="39,59,0,0" TextWrapping="Wrap" Text="Enter an extension to create a new file, or leave the extension empty for a new folder." VerticalAlignment="Top" Width="318"/>
        <Button x:Name="CreateFileSystemEntryButton" Content="Create" HorizontalAlignment="Left" Margin="289,146,0,0" VerticalAlignment="Top" Width="68" Foreground="White" Background="#FF00B376" Click="CreateFileSystemEntryButton_Click"/>

    </Grid>
</Window>
